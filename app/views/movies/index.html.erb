


<div>
  <div>
    <p style="color: green"><%= notice %></p>
  </div>
  <div>
    <h2 class="display-6 text-center mb-4">Movies</h2>
  </div>
  <div>
    <% @movies.each do |movie| %>
      <div class="col">
        <div class="card shadow-sm">
          <div class="card-body">
            <h4 class="card-text"><%= movie.name %></h4>
            <div class="align-items-center">
              <% movie.show_times.seats_available.each do |show_time| %>
                 <%= link_to time_only(show_time.show_date_and_time), show_time_path(show_time), class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>

